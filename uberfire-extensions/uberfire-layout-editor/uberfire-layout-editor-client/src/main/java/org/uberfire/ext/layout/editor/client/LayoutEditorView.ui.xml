<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="i18n" type="org.uberfire.ext.layout.editor.client.resources.i18n.CommonConstants"/>

  <ui:style>
    .panelContent {
      margin-bottom: 0px !important;
    }

    .container {
    }

    .componentsGrid {
      width: 100%;
    }

    .dndComponent {
      position: fixed;
      right: 0;
      width: 200px;
      margin-right: 30px;
    }

    .newContainer {
      border-radius: 4px;
      border: 1px solid #DDDDDD;
    }
  </ui:style>

  <g:HTMLPanel>
    <b:Row>
      <b:Column size="MD_9">
        <g:FlowPanel>
          <g:FlowPanel ui:field="container"/>
        </g:FlowPanel>
      </b:Column>
      <b:Column size="MD_3" styleName="{style.dndComponent}">
        <g:FlowPanel styleName="{style.componentsGrid}" addStyleNames="navbar-right">
          <b:PanelGroup ui:field="accordion" styleName="{style.container}">
            <b:Panel addStyleNames="{style.panelContent}">
              <b:PanelHeader>
                <b:Heading size="H4">
                  <b:Anchor ui:field="anchor" dataToggle="COLLAPSE" text="{i18n.Components}" icon="FOLDER_OPEN"/>
                </b:Heading>
              </b:PanelHeader>
              <b:PanelCollapse ui:field="collapseTwo">
                <b:PanelBody ui:field="components"/>
              </b:PanelCollapse>
            </b:Panel>
          </b:PanelGroup>
        </g:FlowPanel>
      </b:Column>
    </b:Row>
  </g:HTMLPanel>
</ui:UiBinder>

