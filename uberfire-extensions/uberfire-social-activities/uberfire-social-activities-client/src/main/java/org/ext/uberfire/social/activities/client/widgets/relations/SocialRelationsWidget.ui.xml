<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <ui:with field="i18n" type="org.ext.uberfire.social.activities.client.resources.i18n.Constants"/>

    <g:HTMLPanel>
        <g:HTMLPanel>
            <b:Heading ui:field="title" size="H4"/>
        </g:HTMLPanel>
        <b:Heading size="H3" text="{i18n.Following}">
            <b:Badge ui:field="followingBadge"/>
        </b:Heading>
        <b:ListGroup ui:field="allfollowing"/>
        <b:Heading size="H3" text="{i18n.Followers}">
            <b:Badge ui:field="followersBadge"/>
        </b:Heading>
        <b:ListGroup ui:field="allfollowers"/>
        <b:Heading size="H3" text="{i18n.AllUsers}">
            <b:Badge ui:field="allusersBadge"/>
        </b:Heading>
        <b:ListGroup ui:field="allusers"/>
    </g:HTMLPanel>
</ui:UiBinder>