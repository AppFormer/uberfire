<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

  <ui:with field="i18n" type="org.uberfire.user.management.client.resources.i18n.UserManagementConstants"/>

  <b:Well>
    <b:Fieldset>
      <b:Legend>Edit User Password
        <small>* is required</small>
      </b:Legend>
      <b:ControlGroup ui:field="userNameGroup">
        <b:ControlLabel for="userName">
          Name:
        </b:ControlLabel>
        <b:Controls>
          <b:Label ui:field="userNameLabel" />
        </b:Controls>
      </b:ControlGroup>
      <b:ControlGroup ui:field="userPasswordGroup">
        <b:ControlLabel for="userPassword">
          <font color="red">*</font>
          Password:
        </b:ControlLabel>
        <b:Controls>
          <b:PasswordTextBox b:id="userPassword" ui:field="userPasswordTextBox" placeholder="New Password..."/>
          <b:HelpInline ui:field="userPasswordHelpInline"/>
        </b:Controls>
      </b:ControlGroup>
      <b:ControlGroup ui:field="userPasswordRepeatGroup">
        <b:ControlLabel for="userPasswordRepeat">
          <font color="red">*</font>
          Repeat password:
        </b:ControlLabel>
        <b:Controls>
          <b:PasswordTextBox b:id="userPasswordRepeat" ui:field="userPasswordRepeatTextBox" placeholder="Repeat new password..."/>
          <b:HelpInline ui:field="userPasswordRepeatHelpInline"/>
        </b:Controls>
      </b:ControlGroup>
    </b:Fieldset>
  </b:Well>

</ui:UiBinder>