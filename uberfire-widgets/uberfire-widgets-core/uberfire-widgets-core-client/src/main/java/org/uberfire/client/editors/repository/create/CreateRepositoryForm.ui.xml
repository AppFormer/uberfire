<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

  <g:HTMLPanel>
    <b:Modal ui:field="popup" title="Create Repository" backdrop="STATIC" keyboard="true" animation="true">
      <b:Well>
        <b:Fieldset>
          <b:Legend>
            Repository Infomation
            <small>* is required</small>
          </b:Legend>
          <b:ControlGroup ui:field="nameGroup">
            <b:ControlLabel for="name">
              <font color="red">*</font>
              Repository Name
            </b:ControlLabel>
            <b:Controls>
              <b:TextBox b:id="name" ui:field="nameTextBox" placeholder="repository name..."/>
              <b:HelpInline ui:field="nameHelpInline" />
            </b:Controls>
          </b:ControlGroup>
          <b:ControlGroup ui:field="groupGroup">
            <b:ControlLabel>Group</b:ControlLabel>
            <b:Controls>
              <b:ListBox ui:field="groupDropdown" />
              <b:HelpInline ui:field="groupHelpInline" />
            </b:Controls>
          </b:ControlGroup>
          <b:ControlGroup>
            <b:ControlLabel>User Name</b:ControlLabel>
            <b:Controls>
              <b:TextBox ui:field="usernameTextBox" placeholder="user name..."/>
            </b:Controls>
          </b:ControlGroup>
          <b:ControlGroup>
            <b:ControlLabel>Password</b:ControlLabel>
            <b:Controls>
              <b:PasswordTextBox ui:field="passwordTextBox" placeholder="password..."/>
            </b:Controls>
          </b:ControlGroup>
        </b:Fieldset>
      </b:Well>
      <b:ModalFooter>
        <b:Button type="DEFAULT" ui:field="cancel">Cancel</b:Button>
        <b:Button icon="FOLDER_CLOSE_ALT" type="PRIMARY" ui:field="create">Create</b:Button>
      </b:ModalFooter>
    </b:Modal>
  </g:HTMLPanel>
</ui:UiBinder> 