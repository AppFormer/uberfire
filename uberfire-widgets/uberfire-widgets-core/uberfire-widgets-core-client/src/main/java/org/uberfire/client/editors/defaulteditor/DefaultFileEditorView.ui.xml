<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:github="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:common="urn:import:org.uberfire.client.common">

  <ui:style>
    .center {
      margin-top: 50px;
      text-align: center;
      height: 200px;
    }

    .topMargin {
      margin-top: 50px;
    }
  </ui:style>

  <g:ResizeLayoutPanel height="300px">
    <github:WellForm ui:field="form">
      <github:TextBox ui:field="pathToFolder" visible="false" name="path"/>
      <github:Column size="4" styleName='{style.center}'>
        <github:Row>
          <github:Label text="Please select a file to upload"/>
        </github:Row>
        <github:Row>
          <common:FileUpload ui:field="fileUpload" name="fileUpload"/>
        </github:Row>
        <github:Row styleName='{style.topMargin}'>
          <github:Button ui:field="downloadButton" text="Download"/>
        </github:Row>
      </github:Column>
    </github:WellForm>
  </g:ResizeLayoutPanel>

</ui:UiBinder>