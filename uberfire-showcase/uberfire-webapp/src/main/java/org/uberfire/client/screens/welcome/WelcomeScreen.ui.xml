<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">

  <ui:style>
    .welcome {
      padding-top: 20px;
      margin-top: 10px;
      text-align: center;
    }
  </ui:style>



  <b:Hero  addStyleNames="{style.welcome}">
    <b:TextBox ui:field="searchBox" searchQuery="true" placeholder="search bean..."/>
    <b:Button ui:field="launch">Launch property editor</b:Button>
    <b:Heading size="2">Welcome to UberFire</b:Heading>
    <b:Paragraph>Now with a bright new Look &amp; Feel based on Boostrap.</b:Paragraph>
  </b:Hero>

</ui:UiBinder>