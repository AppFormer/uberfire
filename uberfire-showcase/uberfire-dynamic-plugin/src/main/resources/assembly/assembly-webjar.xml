<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>webjar</id>
    <formats>
        <format>jar</format>
    </formats>

    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.outputDirectory}/js/${gwt.module.name}/</directory>
            <outputDirectory>META-INF/resources/webjars/${project.artifactId}/${project.version}</outputDirectory>
            <includes>
                <include>${gwt.module.name}.nocache.js</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.outputDirectory}/plugins/</directory>
            <outputDirectory>META-INF/resources/webjars/${project.artifactId}/${project.version}</outputDirectory>
            <includes>
                <include>*.js</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.outputDirectory}/plugins/</directory>
            <outputDirectory>META-INF/resources/webjars/${project.artifactId}/${project.version}</outputDirectory>
            <includes>
                <include>*.json</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>${project.build.outputDirectory}/plugins/</directory>
            <outputDirectory>META-INF/resources/webjars/${project.artifactId}/${project.version}</outputDirectory>
            <includes>
                <include>*.html</include>
            </includes>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>

</assembly>
